  "compilerOptions": {
    //"composite": true,
    "noEmit": false,
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,

    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]

}
