{
        "compilerOptions": {
          "target": "ES2020",
          "module": "NodeNext",
          "moduleResolution": "nodenext",
          "outDir": "./dist",
          "rootDir": ".",
          "strict": true,
          "esModuleInterop": true,
          "skipLibCheck": true,
          "forceConsistentCasingInFileNames": true,
          "noImplicitAny": false
        },
        "include": ["**/*.ts",  "controllers/userController.ts", "declarations.d.ts"],
        "exclude": ["node_modules"]
}